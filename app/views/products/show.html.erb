<div class="breadcrumb">
  <div class="wrap">
    <div class="container">
      <a href="/"><%= t(:label_site_home) %></a><span>/</span><a href="/admin"><%= t(:label_site_admin) %></a><span>/</span><a href="/admin/products"><%= t(:label_admin_product) %></a><span>/</span><%= @product.name %>
    </div>
  </div>
</div>
<div class="wrap">
  <div class="container">
    <section>
      <div class="row">
        <p id="notice"><%= notice %></p>

        <p>
          <b><%= t(:label_admin_name) %>:</b>
          <%= @product.name %>
        </p>

        <p>
          <b><%= t(:label_site_catalog) %>:</b>
          <%= @product.catalog.name %>
        </p>

        <p>
          <b><%= t(:label_admin_shortdesc) %>:</b>
          <%= @product.shortdesc %>
        </p>

        <p>
          <b><%= t(:label_admin_desc) %>:</b>
          <%= @product.desc %>
        </p>

        <p>
          <b><%= t(:label_admin_intro) %>:</b>
          <%= @product.introduce %>
        </p>


        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %>

      </div>
    </section>
  </div>
</div>